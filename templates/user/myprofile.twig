{% extends "layout.twig" %}

{% block header %}
{% include "user/navbar.twig" %}
{% endblock %}

{% block content %}

<div class="container-fluid">

    <!-- START: Basic Personal Details -->

    <div class="row justify-content-center mb-3">
        <div class="col-lg-8 col-12">

            <p class="h4 text-center">Basic Personal Details</p>

            <form action="" method="POST" enctype="multipart/form-data">
                <div class="row row-cols-3">
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input name="profileFirstname"
                                value="{{ profileFirstname ? profileFirstname : me.firstName}}" required type="text"
                                class="form-control" id="floatingFirstname" placeholder="First Name">
                            <label for="floatingFirstname">First Name</label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-floating mb-3">
                            <input name="pofileLastname" value="{{ profileLastname ? profileLastname : me.lastName}}"
                                required type="text" class="form-control" id="floatingLastname" placeholder="Last Name">
                            <label for="floatingLastname">Last Name</label>
                        </div>
                    </div>

                    <div class="col-auto align-self-center">
                        <button class="btn btn-success mb-3" type="submit"><i class="fa fa-floppy-o me-2"
                                aria-hidden="true"></i>Save</button>
                    </div>
                </div>
            </form>
        </div>

    </div>

    <!-- END: Basic Personal Details -->

    <!-- START: Log In Details -->

    <div class="row justify-content-center mb-3">
        <div class="col-lg-8 col-12">
            <p class="h4 text-center">Log In Details</p>
            <form action="" method="POST" enctype="multipart/form-data">
                <div class="row row-cols-2">
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input name="profileUsername" value="{{ profileUsername ? profileUsername : me.username }}"
                                required type="text" class="form-control" id="floatingUsername" placeholder="Username">
                            <label for="floatingUsername">Username</label>
                        </div>
                    </div>
                    <div class="col-auto align-self-center">
                        <button class="btn btn-success mb-3" type="submit"><i class="fa fa-floppy-o me-2"
                                aria-hidden="true"></i>Save</button>
                    </div>
                </div>
            </form>

            <button type="button" id="btnChangePassword" class="btn btn-warning">
                <i class="fa fa-key" aria-hidden="true"></i>
                Change Password
            </button>
        </div>
    </div>

    <!-- END: Log In Details -->

    <!-- START: contact details -->

    <div class="row justify-content-center mb-3">
        <div class="col-lg-8 col-12">
            <p class="h4 text-center ">Contact Details</p>
            <form action="" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="row row-cols-2">
                        <div class="col">
                            <div class="form-floating mb-3">
                                <input name="profileEmail" value="{{ profileEmail ? profileEmail : me.email }}" required
                                    type="email" class="form-control" id="floatingEmail" placeholder="Email">
                                <label for="floatingEmail">Email</label>
                            </div>
                        </div>
                        <div class="col-auto align-self-center">
                            <button class="btn btn-success mb-3" type="submit"><i class="fa fa-floppy-o me-2"
                                    aria-hidden="true"></i>Save</button>
                        </div>
                    </div>
            </form>
        </div>
    </div>

    <!-- END: contact details -->

    <!-- START: Posts Details -->

    <div class="row justify-content-center ">
        <div class="col-lg-8 col-12">
            <p class="h4 text-center">Post Details</p>
            <button id="btnDeleteAllPosts" class="btn btn-danger">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Delete all posts
            </button>
        </div>
    </div>
    <!-- END: Post Details -->
</div>

<!-- Button trigger modal -->

{% endblock %}